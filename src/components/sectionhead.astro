---
const { align = "center", backgroundImage } = Astro.props;
---

<div class="relative flex flex-col items-center justify-center py-16 lg:py-40 bg-cover bg-center text-white" style={`background-image: url(${backgroundImage})`}>
  <div class="absolute inset-0 bg-black opacity-50"></div>
  <div class="relative z-10 text-${align}">
    <h1 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
      <slot name="title">Title</slot>
    </h1>
    <p class="text-lg mt-4 text-slate-300">
      <slot name="desc">Some description goes here</slot>
    </p>
  </div>
</div>

<style>
  .bg-cover {
    background-size: cover;
  }
  .bg-center {
    background-position: center;
  }
</style>
