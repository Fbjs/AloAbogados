---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import backgroundImage from "assets/landing-bg.webp";
import Logo from "assets/logo_aloabogados-removebg.png";

const menuitems = [
  {
    title: "Home",
    path: "/",
  },
  {
    title: "Nosotros",
    path: "/about",
  },
  {
    title: "Servicios",
    path: "#",
    children: [
      { title: "Personas", path: "/ServiciosPersonas" },
      { title: "PYME", path: "/ServiciosPYME" },
    ],
  },
  {
    title: "Blog",
    path: "/blog",
  },
  {
    title: "Contacto",
    path: "/contact",
  },
];
---

<div class="relative bg-slate-800 p-2 text-white flex justify-between items-center">
  <div class="flex items-center animate-fade-in-right">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-mail">
      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
      <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" />
      <path d="M3 7l9 6l9 -6" />
    </svg>
    <a href="mailto:contacto@aloabogado.cl" class="ml-1">contacto@aloabogado.cl</a>
  </div>
  <div class="flex items-center animate-fade-in-left">
    <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-brand-whatsapp"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9" /><path d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1" /></svg>
    <a href="https://api.whatsapp.com/send?phone=5697193049" class="ml-1">+56 9 9719 3049</a>
  </div>
</div>


<div class="relative bg-sky-900 p-2 opacity-100 z-10">
  <div class="absolute inset-0 bg-cover bg-center z-0" style={`background-image: url(${backgroundImage.src})`}></div>
  <div class="absolute inset-0 bg-sky-900 opacity-95 z-10"></div>
  <Container class="relative z-20">
    <header class="flex flex-col lg:flex-row justify-between items-center my-5">
      <Astronav>
        <div class="flex w-full lg:w-auto items-center justify-between">
          <a href="/" class="text-3xl flex items-center">
            <img src={Logo.src} alt="" class="w-32 animate-fade-in-right">
            <div class="grid animate-fade-in-right">
              <span class="font-bold text-slate-900">Al√≥</span>
              <span class="text-white">Abogado</span>
            </div>
            
          </a>
          <div class="block lg:hidden">
            <MenuIcon class="w-4 h-4 text-gray-800" />
          </div>
        </div>
        <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0 animate-fade-in-left">
          <ul class="flex flex-col lg:flex-row lg:gap-3 text-2xl">
            {menuitems.map((item, index) => (
              <>
                {item.children ? (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                ) : (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-white hover:text-sky-400"
                    >
                      <span>{item.title}</span>
                    </a>
                  </li>
                )}
              </>
            ))}
          </ul>
          <div class="lg:hidden flex items-center mt-3 gap-4">
            <Link href="#" style="muted" block size="md">
              Log in
            </Link>
            <Link href="#" size="md" block>
              Sign up
            </Link>
          </div>
        </MenuItems>
      </Astronav>
    </header>
  </Container>
</div>
