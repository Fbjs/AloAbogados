---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import backgroundImage from "assets/landing-bg.webp";
import Logo from "assets/logo_aloabogados-removebg.png";

const menuitems = [
  {
    title: "Home",
    path: "/",
  },
  {
    title: "Nosotros",
    path: "/about",
  },
  {
    title: "Servicios",
    path: "#",
    children: [
      { title: "Personas", path: "/ServiciosPersonas" },
      { title: "PYME", path: "/ServiciosPYME" },
    ],
  },
  {
    title: "Blog",
    path: "/blog",
  },
  {
    title: "Contacto",
    path: "/contact",
  },
];
---

<div class="relative bg-slate-800 p-2">1</div>
<div class="relative bg-sky-900 p-2 opacity-90">
  <div class="absolute inset-0 bg-cover bg-center z-0" style={`background-image: url(${backgroundImage.src})`}></div>
  <div class="absolute inset-0 bg-sky-900 opacity-95 z-10"></div>
  <Container class="relative z-20">
    <header class="flex flex-col lg:flex-row justify-between items-center my-5">
      <Astronav>
        <div class="flex w-full lg:w-auto items-center justify-between">
          <a href="/" class="text-3xl flex items-center">
            <img src={Logo.src} alt="" class="w-32">
            <div class="grid">
              <span class="font-bold text-slate-900">Al√≥</span>
              <span class="text-white">Abogado</span>
            </div>
            
          </a>
          <div class="block lg:hidden">
            <MenuIcon class="w-4 h-4 text-gray-800" />
          </div>
        </div>
        <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
          <ul class="flex flex-col lg:flex-row lg:gap-3 text-2xl">
            {menuitems.map((item, index) => (
              <>
                {item.children ? (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                ) : (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-white hover:text-sky-400"
                    >
                      <span>{item.title}</span>
                    </a>
                  </li>
                )}
              </>
            ))}
          </ul>
          <div class="lg:hidden flex items-center mt-3 gap-4">
            <Link href="#" style="muted" block size="md">
              Log in
            </Link>
            <Link href="#" size="md" block>
              Sign up
            </Link>
          </div>
        </MenuItems>
      </Astronav>
    </header>
  </Container>
</div>
